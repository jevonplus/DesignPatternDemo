<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/factory_method_title_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/factory_method_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/factory_method" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
            android:id="@+id/factory_method_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/factory_method_car_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="汽车" />
            <RadioButton
                android:id="@+id/factory_method_truck_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="卡车" />
            <RadioButton
                android:id="@+id/factory_method_bus_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="客车" />
        </RadioGroup>
            <Button
                android:id="@+id/custom_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_vehicle">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/abstract_factory_title_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/abstract_factory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/abstract_factory" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/abstract_factory_vehicle_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/abstract_factory_car_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="汽车" />
                <RadioButton
                    android:id="@+id/abstract_factory_truck_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="卡车" />
                <RadioButton
                    android:id="@+id/abstract_factory_bus_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="客车" />
            </RadioGroup>
            <!--<EditText
            android:id="@+id/vehicle_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:digits="123"
            android:ems="10"
            android:hint="请输入车辆类型"
            android:inputType="number" /> -->
            <RadioGroup
                android:id="@+id/abstract_factory_color_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <RadioButton
                android:id="@+id/abstract_factory_red_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="红色" />
            <RadioButton
                android:id="@+id/abstract_factory_white_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="白色" />
            <RadioButton
                android:id="@+id/abstract_factory_blue_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="蓝色" />
            </RadioGroup>
            <Button
                android:id="@+id/absfactory_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_vehicle"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/singleton_title_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/singleton_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/singleton" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/singleton_id_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/singleton_vehicle_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="车辆厂" />
                <RadioButton
                    android:id="@+id/singleton_color_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="喷漆厂" />
            </RadioGroup>
            <EditText
                android:id="@+id/singleton_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="姓名" />
            <EditText
                android:id="@+id/singleton_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="2"
                android:digits="1234567890"
                android:ems="10"
                android:hint="年龄"
                android:inputType="number" />

            <RadioGroup
                android:id="@+id/singleton_sex_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/singleton_man_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="男" />
                <RadioButton
                    android:id="@+id/singleton_women_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="女" />
            </RadioGroup>
            <Button
                android:id="@+id/singleton_appoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="任命厂长" />
            <Button
                android:id="@+id/singleton_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查询厂长" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/builder_title_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/builder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/builder" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/builder_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="1"
                android:digits="12"
                android:ems="10"
                android:inputType="number"
                android:hint="厂号" />
            <EditText
                android:id="@+id/builder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="姓名" />
            <EditText
                android:id="@+id/builder_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="2"
                android:digits="1234567890"
                android:ems="10"
                android:hint="年龄"
                android:inputType="number" />

            <EditText
                android:id="@+id/builder_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="性别" />
            <EditText
                android:id="@+id/builder_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="职位" />
            <Button
                android:id="@+id/builder_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="构建" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/prototype_title_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/prototype_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/prototype" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/prototype_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="添置物品" />
            <Button
                android:id="@+id/prototype_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="标配" />
            <Button
                android:id="@+id/prototype_add_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="添置" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>